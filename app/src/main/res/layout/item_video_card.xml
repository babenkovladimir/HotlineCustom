<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <android.support.v7.widget.CardView
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:id="@+id/card_viewVideoCard"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      card_view:cardBackgroundColor="@color/colorApricot"
      card_view:cardCornerRadius="4dp"
      card_view:cardElevation="8dp"
      card_view:cardUseCompatPadding="true"
      card_view:layout_constraintEnd_toEndOf="parent"
      card_view:layout_constraintStart_toStartOf="parent"
      card_view:layout_constraintTop_toTopOf="parent"
      >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/clParentLatoutVideoCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <ImageView
          android:id="@+id/ivVideoCardImage"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_margin="8dp"
          android:contentDescription="Video cerd view"
          app:layout_constraintBottom_toBottomOf="@id/clParentLatoutVideoCard"
          app:layout_constraintStart_toStartOf="@id/clParentLatoutVideoCard"
          app:layout_constraintTop_toTopOf="@id/clParentLatoutVideoCard"
          tools:background="@drawable/logo_activity_umbrella"
          />

      <LinearLayout

          android:layout_width="198dp"
          android:layout_height="127dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:orientation="vertical"
          card_view:layout_constraintBottom_toBottomOf="parent"
          card_view:layout_constraintEnd_toEndOf="parent"
          card_view:layout_constraintStart_toEndOf="@+id/ivVideoCardImage"
          card_view:layout_constraintTop_toTopOf="parent"
          card_view:layout_constraintVertical_bias="0.0"
          >

        <TextView
            android:id="@+id/tvVideoCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            tools:text="GeForce"
            />

        <TextView
            android:id="@+id/tvVideCardMemorySize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            tools:text="Ram: 4Gb"
            />

        <TextView
            android:id="@+id/tvVideoCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            tools:text="price 400$"
            />


      </LinearLayout>

      <Button
          android:id="@+id/btVideoCardStar"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_marginEnd="8dp"
          android:layout_marginTop="8dp"
          android:background="@drawable/states_star"
          android:enabled="false"
          android:focusable="false"
          android:focusableInTouchMode="false"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
    </android.support.constraint.ConstraintLayout>

  </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>