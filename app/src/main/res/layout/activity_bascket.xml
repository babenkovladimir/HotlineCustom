<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bascket_activity_mvp.BascketActivity"
    >

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rvBascketList"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="36dp"
      app:layout_constraintBottom_toTopOf="@id/vHorizontalLine"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <View
      android:id="@+id/vHorizontalLine"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_marginBottom="4dp"
      android:background="@color/colorPrimary"
      app:layout_constraintBottom_toTopOf="@id/flTotalValues"
      />

  <FrameLayout
      android:id="@+id/flTotalValues"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      >

    <TextView
        android:id="@+id/tvT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toatal price"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="999$"
        />

  </FrameLayout>



</android.support.constraint.ConstraintLayout>